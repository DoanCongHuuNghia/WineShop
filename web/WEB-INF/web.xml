<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>HomeControlServlet</servlet-name>
        <servlet-class>control.HomeControlServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ShopControlServlet</servlet-name>
        <servlet-class>control.ShopControlServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DetailControlServlet</servlet-name>
        <servlet-class>control.DetailControlServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SearchControlServlet</servlet-name>
        <servlet-class>control.SearchControlServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginControlServlet</servlet-name>
        <servlet-class>control.LoginControlServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HomeControlServlet</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ShopControlServlet</servlet-name>
        <url-pattern>/shop</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DetailControlServlet</servlet-name>
        <url-pattern>/detail</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SearchControlServlet</servlet-name>
        <url-pattern>/search</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginControlServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
